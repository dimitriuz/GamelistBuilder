@model GamelistBuilder.Models.Game
<tr>
    <td>
        @if (Model.IsFolder)
        {
        <div class="bg-success">
            @Html.DisplayFor(modelItem => Model.Name)
        </div>
        }
        else
        {
            @Html.DisplayFor(modelItem => Model.Name)
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Rating)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Favorite)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.RomFound)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.ImageFound)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.VideoFound)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.MarqueFound)
    </td>
    <td>
        <a class="btn btn-primary" style="margin: 2px" asp-action="Edit" asp-route-id="@Model.Path">Edit</a>
        <a class="btn btn-danger" style="margin: 2px" asp-action="Delete" asp-route-id="@Model.Path">Delete</a>
    </td>
</tr>